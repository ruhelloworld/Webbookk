@{

    var user = Session["TaiKhoan"] as BookStoreOnline.Models.Customer;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chào mừng bạn đến với ITBookStore - Nơi chứa nhiều điền thú vị</title>
    <link href="~/fonts/themify-icons/themify-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body>
    <!-- header     -->
    <div class="header">
        <div class="head-top d-flex">
            <img src="~/Images/White Full Photo Author Banner.png" style="object-fit:fill;width:33.33%;height:100px" />
            <img src="~/Images/IT-bookstore.png" style="object-fit:inherit; width: 33.33%; height: 100px" />
            <img src="~/Images/Green and Blue Playful Read Book Linkedin Banner.png" style="object-fit:inherit; width: 33.33%; height: 100px" />
        </div>
        <div class="container-fluid head-content">
            <div class="row">
                <div class="col-md-3 logo" align="center">
                    <a href="@Url.Action("Index","Home")"><img style="width:auto" src="~/Images/ITBookStore.jpg"></a>
                </div>
                <div class="col-lg-6 head-middle">

                    @using (Html.BeginForm("Search", "Category", FormMethod.Post))
                    {
                        <input type="text" name="inputString" placeholder="Nhập từ khóa tìm kiếm">
                        <button type="submit"><i class="bi bi-search"></i></button>
                    }
                </div>
                <div class="col-lg-3 head-right">
                    @if (user == null)
                    {
                        <a href="#" class="cart-link"><i class="ti-shopping-cart"></i></a>

                    }
                    else
                    {
                        { Html.RenderAction("CartPartial", "Cart"); }
                    }

                    @if (user == null)
                    {
                        <a href="@Url.Action("Login","User")" class="login-link">Đăng nhập</a>
                        <a href="@Url.Action("SignUp","User")" class="login-link" style="margin-left:5px">Đăng ký</a>
                    }
                    else
                    {
                        <div class="dropdown show">
                            <a class="user-link-option" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="ti-user"></i>
                                <span style="font-size: 20px;"> @user.NameCustomer</span>
                            </a>


                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item" href="@Url.Action("Index/"+user.ID,"Order")">Đơn hàng của bạn</a>
                                <a class="dropdown-item" href="@Url.Action("LogOut","User")">Đăng xuất</a>

                            </div>
                        </div>

                    }

                </div>
            </div>
        </div>

    </div>
    <!-- end-header -->
    <!-- nav -->
    <div class="nav">
        <div class="container nav-list">
            <div class="row" style="align-items: center;">
                <div class="col-md-1">
                    @{Html.RenderAction("GetPartialCategoryNav", "CategoryPartial");}
                </div>
                <div class="col-md-1"></div>

                <div class="col-md-7">

                    <nav class="navbar navbar-expand-lg navbar-light">

                        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                            <div class="navbar-nav">
                                <a class="nav-item nav-link" href="@Url.Action("Index","Home")">Trang chủ <span class="sr-only">(current)</span></a>
                                <a class="nav-item nav-link" href="@Url.Action("GetAllBook","Category")">Sản phẩm sách</a>
                                <a class="nav-item nav-link" href="https://www.facebook.com/ruhelloworld">Liên hệ</a>
                            </div>
                        </div>
                    </nav>

                </div>
            </div>
        </div>
    </div>
    <!-- end-nav -->

