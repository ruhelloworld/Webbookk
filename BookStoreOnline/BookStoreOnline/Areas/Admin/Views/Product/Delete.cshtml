@model BookStoreOnline.Models.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<h3>Bạn có chắc chắn muốn xóa sách này ?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductName)
        </dd>

        

        <dt>
            @Html.DisplayNameFor(model => model.ImageProd)
        </dt>

        <dd>
            <img src="~/Images/@Model.ImageProd"style="width: 20%; position: relative; left: 0;height:280px" /> <br/> <br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
        </dd>

        <dt>
            Thể loại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-danger" /> |
            @Html.ActionLink("Quay lại", "Index")
        </div>
    }
</div>
