@model IEnumerable<BookStoreOnline.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Các thể loại sách</h2>

<p>
    @Html.ActionLink("Thêm thể loại mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Thể loại
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.CategoryID }) |

            @Html.ActionLink("Xóa", "Delete", new { id = item.CategoryID }) |

            @Html.ActionLink("Chi Tiết", "Details", new { id = item.CategoryID })
        </td>
    </tr>
}

</table>
